---
import "../styles/global.css"
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Univerxo Blend - Historias que unen, vínculos que sanan",
  description = "Una comunidad digital y emocional que nace desde la vivencia real de criar a un hijo con discapacidad. Compartimos historias auténticas, recursos útiles y creamos vínculos que sanan."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Título único por página -->
  <title>{title}</title>

  <!-- Meta descripción atractiva y con keywords -->
  <meta name="description" content="Univerxo Blend es un proyecto comunitario digital desarrollado en colaboración con MarTech y Mocawa Café. Un espacio de encuentro en Armenia, Quindío, donde compartimos historias, recursos y experiencias de vida que inspiran apoyo, reflexión y crecimiento.">

  <!-- Palabras clave -->
  <meta name="keywords" content="Univerxo Blend, MarTech, Mocawa Café, Armenia Quindío, comunidad digital, apoyo emocional, experiencias de vida, historias, recursos digitales, práctica dual, Corporación Universitaria Alexander von Humboldt, ingeniería de software">

  <!-- Autor -->
  <meta name="author" content="MarTech, Univerxo Blend">

  <!-- Open Graph para Facebook / LinkedIn -->
  <meta property="og:title" content="Univerxo Blend | Comunidad digital de apoyo y experiencias de vida">
  <meta property="og:description" content="Univerxo Blend: un espacio comunitario digital en Armenia, Quindío, creado para compartir historias, recursos y experiencias de vida. Proyecto académico y social desarrollado con MarTech y Mocawa Café.">
  <meta property="og:image" content="https://univerxo-blend-dev.vercel.app/img/logo-blend.jpg">
  <meta property="og:url" content="https://univerxo-blend-dev.vercel.app">
  <meta property="og:type" content="website">
  <meta property="og:locale" content="es_CO">

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="Univerxo Blend | Comunidad digital de apoyo y experiencias de vida">
  <meta name="twitter:description" content="Proyecto digital desarrollado en Armenia, Quindío con MarTech. Historias, recursos y comunidad para crecer juntos.">
  <meta name="twitter:image" content="https://univerxo-blend-dev.vercel.app/img/logo-blend.jpg">

  <!-- Favicon -->
  <link rel="icon" href="/img/logo-blend.jpg" type="image/jpg">
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>