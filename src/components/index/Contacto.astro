---
import { Mail, Send, MessageCircle } from '@lucide/astro';
---

<section id="contacto" class="py-20 bg-gradient-to-b from-[#F8F5F2] to-white">
    <div class="max-w-2xl mx-auto px-6">
        
        <!-- Encabezado -->
        <div class="text-center mb-12">
            <div class="inline-flex items-center bg-[#E8D5E8]/50 px-6 py-3 rounded-full mb-6">
                <Mail class="w-4 h-4 text-[#7B3E3E] mr-2" />
                <span class="text-[#7B3E3E] text-sm font-medium">Cont√°ctanos</span>
            </div>
            
            <h2 class="text-4xl lg:text-5xl font-bold text-[#7B3E3E] mb-6">
                Estamos aqu√≠ para 
                <span class="text-[#8B4513]">acompa√±arte</span>
            </h2>
            
            <p class="text-xl text-[#5C3A32] leading-relaxed">
                Comparte tu historia o haz una pregunta. Cada mensaje es importante para nosotros.
            </p>
        </div>

        <!-- Formulario -->
        <div class="bg-white/70 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-[#E8C4B8]/30">
            <form id="contact-form" class="space-y-6">
                
                <!-- Nombre -->
                <div>
                    <label for="name" class="block text-sm font-semibold text-[#5C3A32] mb-2">
                        Nombre completo
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        placeholder="¬øC√≥mo te llamas?" 
                        required 
                        class="w-full px-5 py-4 rounded-xl border border-[#E8C4B8]/40 focus:border-[#8B4513] focus:outline-none transition-all duration-300 bg-white/50 text-[#5C3A32]"
                    />
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="block text-sm font-semibold text-[#5C3A32] mb-2">
                        Correo electr√≥nico
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="tu.correo@ejemplo.com" 
                        required 
                        class="w-full px-5 py-4 rounded-xl border border-[#E8C4B8]/40 focus:border-[#8B4513] focus:outline-none transition-all duration-300 bg-white/50 text-[#5C3A32]"
                    />
                </div>

                <!-- Mensaje -->
                <div>
                    <label for="message" class="block text-sm font-semibold text-[#5C3A32] mb-2">
                        Tu mensaje
                    </label>
                    <textarea 
                        id="message" 
                        name="message" 
                        rows="5" 
                        placeholder="Cu√©ntanos qu√© tienes en mente..." 
                        required 
                        class="w-full px-5 py-4 rounded-xl border border-[#E8C4B8]/40 focus:border-[#8B4513] focus:outline-none transition-all duration-300 bg-white/50 text-[#5C3A32] resize-none"
                    ></textarea>
                </div>

                <!-- Bot√≥n de env√≠o -->
                <button 
                    type="submit" 
                    class="w-full inline-flex items-center justify-center bg-[#7B3E3E] hover:bg-[#6A3434] text-white font-semibold px-8 py-4 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 cursor-pointer"
                >
                    <span>Enviar mensaje</span>
                    <Send class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" />
                </button>
            </form>

            <!-- WhatsApp -->
            <div class="text-center mt-8 pt-6 border-t border-[#E8C4B8]/30">
                <p class="text-[#5C3A32]/70 mb-4">O cont√°ctanos por WhatsApp</p>
                <a 
                    href="https://wa.me/573001234567?text=Hola%20Univerxo%20Blend" 
                    target="_blank" 
                    class="inline-flex items-center justify-center bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-xl transition-all duration-300 shadow-lg"
                >
                    <span>Chatear ahora</span>
                    <MessageCircle class="ml-2 w-5 h-5" />
                </a>
            </div>
        </div>
    </div>
</section>

<script>
    // Simple form handler
    document.getElementById('contact-form').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(this);
        const data = {
            timestamp: new Date().toISOString(),
            name: formData.get('name'),
            email: formData.get('email'),
            message: formData.get('message')
        };
        
        // Log to console
        console.log('üìß NUEVO MENSAJE - UNIVERXO BLEND');
        console.log('Fecha:', data.timestamp);
        console.log('Nombre:', data.name);
        console.log('Email:', data.email);
        console.log('Mensaje:', data.message);
        
        // Show success message
        alert('¬°Mensaje enviado! Te responderemos pronto.');
        
        // Reset form
        this.reset();
    });
</script>