---
import { BookOpen, Clock, Heart, ArrowRight, Calendar } from '@lucide/astro';

// Datos de ejemplo para los capítulos
const capitulos = [
  {
    id: 1,
    titulo: "El día que cambió todo",
    descripcion: "La historia de cómo el diagnóstico de Simón transformó nuestra perspectiva sobre la vida y nos enseñó el verdadero significado del amor incondicional.",
    fecha: "15 de junio, 2024",
    tiempoLectura: "5 min",
    categoria: "Diagnóstico",
    imagen: "img/capitulo-1.jpg",
    destacado: true
  },
  {
    id: 2,
    titulo: "Aprendiendo a navegar",
    descripcion: "Los primeros pasos después del diagnóstico, las dudas, los miedos y cómo encontramos nuestra propia forma de caminar este sendero.",
    fecha: "22 de junio, 2024",
    tiempoLectura: "7 min",
    categoria: "Adaptación",
    imagen: "img/capitulo-2.jpg",
    destacado: false
  },
  {
    id: 3,
    titulo: "Pequeñas victorias",
    descripcion: "Celebrando cada logro, cada sonrisa, cada momento especial que nos recuerda que el progreso no siempre se mide de la manera tradicional.",
    fecha: "29 de junio, 2024",
    tiempoLectura: "4 min",
    categoria: "Celebración",
    imagen: "img/capitulo-3.jpg",
    destacado: false
  },
  {
    id: 4,
    titulo: "La fuerza de la comunidad",
    descripcion: "Cómo encontrar y construir una red de apoyo que realmente entienda tu camino y se convierta en tu segunda familia.",
    fecha: "5 de julio, 2024",
    tiempoLectura: "6 min",
    categoria: "Comunidad",
    imagen: "img/capitulo-4.jpg",
    destacado: false
  },
  {
    id: 5,
    titulo: "Redefiniendo el futuro",
    descripcion: "Cuando los planes cambian y aprendemos que el futuro puede ser diferente al que imaginamos, pero igualmente hermoso y lleno de posibilidades.",
    fecha: "12 de julio, 2024",
    tiempoLectura: "8 min",
    categoria: "Reflexión",
    imagen: "img/capitulo-5.jpg",
    destacado: false
  },
  {
    id: 6,
    titulo: "Sanando heridas",
    descripcion: "El proceso de sanar nuestras propias heridas emocionales para poder ser el apoyo que nuestros hijos necesitan.",
    fecha: "19 de julio, 2024",
    tiempoLectura: "6 min",
    categoria: "Sanación",
    imagen: "img/capitulo-6.jpg",
    destacado: false
  }
];

const categorias = [
  { nombre: "Todos", color: "bg-[#7B3E3E]" },
  { nombre: "Diagnóstico", color: "bg-[#8B4513]" },
  { nombre: "Adaptación", color: "bg-[#C8A8D8]" },
  { nombre: "Celebración", color: "bg-[#E8C4B8]" },
  { nombre: "Comunidad", color: "bg-[#D4A574]" },
  { nombre: "Reflexión", color: "bg-[#7B3E3E]" },
  { nombre: "Sanación", color: "bg-[#8B4513]" }
];
---

<section class="py-20 bg-gradient-to-b from-white to-[#F8F5F2]" id="capitulos-vida">
  <div class="max-w-7xl mx-auto px-6">
    
    <!-- Encabezado -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center bg-[#E8D5E8]/50 px-6 py-3 rounded-full mb-6">
        <BookOpen class="w-4 h-4 text-[#7B3E3E] mr-2" stroke="currentColor" />
        <span class="text-[#7B3E3E] text-sm font-medium">Capítulos de vida</span>
      </div>
      
      <h2 class="text-4xl lg:text-5xl font-bold text-[#7B3E3E] mb-6 leading-tight">
        Historias desde el
        <span class="text-[#8B4513] relative">
          corazón
          <div class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-[#E8C4B8] to-[#D4A574] rounded-full"></div>
        </span>
      </h2>
      
      <p class="text-xl text-[#5C3A32] max-w-3xl mx-auto leading-relaxed">
        Compartimos experiencias reales, reflexiones auténticas y aprendizajes profundos 
        desde nuestro camino junto a Simón
      </p>
    </div>

    <!-- Filtros de categorías -->
    <div class="flex flex-wrap justify-center gap-3 mb-12">
      {categorias.map((categoria) => (
        <button 
          class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 border border-transparent
            ${categoria.nombre === 'Todos' 
              ? 'bg-[#7B3E3E] text-white shadow-lg' 
              : 'bg-white/80 text-[#7B3E3E] hover:bg-[#7B3E3E] hover:text-white'
            }`}
          data-categoria={categoria.nombre}
        >
          {categoria.nombre}
        </button>
      ))}
    </div>

    <!-- Capítulo destacado -->
    <div class="mb-16">
      <div class="bg-gradient-to-r from-[#E8D5E8]/40 to-[#E8C4B8]/40 rounded-3xl p-8 lg:p-12 backdrop-blur-sm border border-white/20">
        <div class="lg:flex lg:items-center lg:gap-12">
          
          <!-- Contenido del capítulo destacado -->
          <div class="lg:w-1/2 mb-8 lg:mb-0">
            <div class="inline-flex items-center bg-gradient-to-r from-[#7B3E3E] to-[#8B4513] text-white px-4 py-2 rounded-full text-sm font-medium mb-6">
              <Heart class="w-4 h-4 mr-2" stroke="currentColor" />
              Capítulo destacado
            </div>
            
            <h3 class="text-3xl lg:text-4xl font-bold text-[#7B3E3E] mb-4 leading-tight">
              {capitulos[0].titulo}
            </h3>
            
            <p class="text-[#5C3A32] text-lg leading-relaxed mb-6">
              {capitulos[0].descripcion}
            </p>
            
            <div class="flex items-center gap-6 mb-8">
              <div class="flex items-center text-[#7B3E3E]/70">
                <Calendar class="w-4 h-4 mr-2" stroke="currentColor" />
                <span class="text-sm">{capitulos[0].fecha}</span>
              </div>
              <div class="flex items-center text-[#7B3E3E]/70">
                <Clock class="w-4 h-4 mr-2" stroke="currentColor" />
                <span class="text-sm">{capitulos[0].tiempoLectura}</span>
              </div>
            </div>
            
            <a href={`/capitulos/${capitulos[0].id}`} class="group inline-flex items-center justify-center bg-[#7B3E3E] hover:bg-[#6A3434] text-white font-semibold px-8 py-4 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
              <span>Leer capítulo completo</span>
              <ArrowRight class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" stroke="currentColor" />
            </a>
          </div>

          <!-- Imagen del capítulo destacado -->
          <div class="lg:w-1/2">
            <div class="relative">
              <div class="bg-white/30 backdrop-blur-sm rounded-2xl p-6 shadow-xl border border-white/20">
                <img 
                  src={capitulos[0].imagen} 
                  alt={`Ilustración para ${capitulos[0].titulo}`}
                  class="w-full h-64 lg:h-80 object-cover rounded-xl"
                  loading="lazy"
                />
              </div>
              
              <!-- Elementos decorativos -->
              <div class="absolute -top-3 -right-3 w-6 h-6 bg-[#C8A8D8] rounded-full animate-pulse"></div>
              <div class="absolute -bottom-3 -left-3 w-4 h-4 bg-[#E8C4B8] rounded-full animate-pulse" style="animation-delay: 0.5s"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Grid de capítulos -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {capitulos.slice(1).map((capitulo, index) => (
        <article class="card group cursor-pointer" data-categoria={capitulo.categoria}>
          <!-- Imagen del capítulo -->
          <div class="relative overflow-hidden">
            <img 
              src={capitulo.imagen} 
              alt={`Ilustración para ${capitulo.titulo}`}
              class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
            />
            
            <!-- Overlay con categoría -->
            <div class="absolute top-4 left-4">
              <span class="bg-white/90 backdrop-blur-sm text-[#7B3E3E] px-3 py-1 rounded-full text-xs font-medium">
                {capitulo.categoria}
              </span>
            </div>
          </div>
          
          <!-- Contenido -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-[#7B3E3E] mb-3 group-hover:text-[#8B4513] transition-colors">
              {capitulo.titulo}
            </h3>
            
            <p class="text-[#5C3A32] text-sm leading-relaxed mb-4 line-clamp-3">
              {capitulo.descripcion}
            </p>
            
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4 text-[#7B3E3E]/70">
                <div class="flex items-center">
                  <Calendar class="w-3 h-3 mr-1" stroke="currentColor" />
                  <span class="text-xs">{capitulo.fecha}</span>
                </div>
                <div class="flex items-center">
                  <Clock class="w-3 h-3 mr-1" stroke="currentColor" />
                  <span class="text-xs">{capitulo.tiempoLectura}</span>
                </div>
              </div>
              
              <a href={`/capitulos/${capitulo.id}`} class="text-[#7B3E3E] hover:text-[#8B4513] transition-colors">
                <ArrowRight class="w-4 h-4" stroke="currentColor" />
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Llamado a la acción -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-[#E8D5E8]/30 to-[#E8C4B8]/30 rounded-3xl p-8 lg:p-12 backdrop-blur-sm border border-white/20">
        <h3 class="text-2xl lg:text-3xl font-bold text-[#7B3E3E] mb-4">
          ¿Quieres recibir nuestros nuevos capítulos?
        </h3>
        <p class="text-[#5C3A32] text-lg mb-8 max-w-2xl mx-auto">
          Suscríbete a nuestra comunidad y recibe cada nuevo capítulo directamente en tu correo, 
          junto con recursos exclusivos y contenido especial
        </p>
        
        <a href="/suscripcion" class="inline-flex items-center justify-center bg-[#7B3E3E] hover:bg-[#6A3434] text-white font-semibold px-8 py-4 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
          <span>Unirme a la comunidad</span>
          <Heart class="ml-2 w-5 h-5" stroke="currentColor" />
        </a>
      </div>
    </div>

  </div>
</section>

<style>
  /* Animaciones para las tarjetas */
  .card {
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .card:nth-child(2) { animation-delay: 0.1s; }
  .card:nth-child(3) { animation-delay: 0.2s; }
  .card:nth-child(4) { animation-delay: 0.3s; }
  .card:nth-child(5) { animation-delay: 0.4s; }
  .card:nth-child(6) { animation-delay: 0.5s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Efectos de hover mejorados */
  .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(123, 62, 62, 0.12);
  }

  /* Truncado de texto */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Filtros interactivos */
  [data-categoria] {
    transition: all 0.3s ease;
  }
  
  .filtro-activo {
    background: linear-gradient(135deg, #7B3E3E, #8B4513) !important;
    color: white !important;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(123, 62, 62, 0.2);
  }
</style>

<script>
  // Funcionalidad de filtros
  document.addEventListener('DOMContentLoaded', function() {
    const filtros = document.querySelectorAll('[data-categoria]');
    const capitulos = document.querySelectorAll('.card[data-categoria]');
    
    filtros.forEach(filtro => {
      filtro.addEventListener('click', function() {
        const categoria = this.dataset.categoria;
        
        // Actualizar botones activos
        filtros.forEach(f => f.classList.remove('filtro-activo'));
        this.classList.add('filtro-activo');
        
        // Filtrar capítulos
        capitulos.forEach(capitulo => {
          const capCategoria = capitulo.dataset.categoria;
          
          if (categoria === 'Todos' || capCategoria === categoria) {
            capitulo.style.display = 'block';
            capitulo.style.animation = 'fadeInUp 0.6s ease-out forwards';
          } else {
            capitulo.style.display = 'none';
          }
        });
      });
    });
  });
</script>