---
import { Menu } from '@lucide/astro';
---

<header class="bg-white/80 backdrop-blur-md shadow-sm border-b border-rose-100 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo mejorado -->
      <a href="#" class="flex items-center space-x-2 text-white hover:scale-102">
        <img 
          src="img/logo-blend.jpg" 
          alt="Univerxo Blend" 
          class="w-30 rounded-2xl"
        />
      </a>

      <!-- Navegación desktop -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="#" class="text-sm font-medium text-stone-700 hover:text-[#8B4513] transition-colors duration-200 relative group">
          Inicio
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-[#8B4513] transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#sobre-nosotros" class="text-sm font-medium text-stone-700 hover:text-[#8B4513] transition-colors duration-200 relative group">
          Sobre nosotrxs
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-[#8B4513] transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#capitulos-vida" class="text-sm font-medium text-stone-700 hover:text-[#8B4513] transition-colors duration-200 relative group">
          Capítulos de vida
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-[#8B4513] transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#ebooks-recursos" class="text-sm font-medium text-stone-700 hover:text-[#8B4513] transition-colors duration-200 relative group">
          Ebooks y recursos
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-[#8B4513] transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#cuentos-simon" class="text-sm font-medium text-stone-700 hover:text-[#8B4513] transition-colors duration-200 relative group">
          Cuentos de Simón
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-[#8B4513] transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#contacto" class="bg-[#7B3E3E] hover:bg-[#6A3434] text-white px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.25">
          Contacto
        </a>
      </nav>

      <!-- Botón menú móvil -->
      <button class="md:hidden p-2 rounded-lg hover:bg-rose-100 transition-colors duration-200" id="mobile-menu-button">
        <Menu class="w-6 h-6 text-stone-700" stroke="currentColor">
      </button>
    </div>

    <!-- Menú móvil -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="pb-4 space-y-1 border-t border-rose-100 pt-4">
        <a href="#" class="block px-3 py-2 text-sm font-medium text-stone-700 hover:text-[#8B4513] hover:bg-rose-50 rounded-lg transition-colors duration-200">Inicio</a>
        <a href="#sobre-nosotros" class="block px-3 py-2 text-sm font-medium text-stone-700 hover:text-[#8B4513] hover:bg-rose-50 rounded-lg transition-colors duration-200">Sobre nosotrxs</a>
        <a href="#capitulos-de-vida" class="block px-3 py-2 text-sm font-medium text-stone-700 hover:text-[#8B4513] hover:bg-rose-50 rounded-lg transition-colors duration-200">Capítulos de vida</a>
        <a href="#ebooks-recursos" class="block px-3 py-2 text-sm font-medium text-stone-700 hover:text-[#8B4513] hover:bg-rose-50 rounded-lg transition-colors duration-200">Ebooks y recursos</a>
        <a href="#cuentos-simon" class="block px-3 py-2 text-sm font-medium text-stone-700 hover:text-[#8B4513] hover:bg-rose-50 rounded-lg transition-colors duration-200">Cuentos de Simón</a>
        <a href="#contacto" class="block mx-3 mt-4 bg-[#7B3E3E] hover:bg-[#6A3434] text-white px-4 py-2 rounded-full text-sm font-medium text-center transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">Contacto</a>
      </div>
    </div>
  </div>
</header>

<script>
// Funcionalidad del menú móvil
document.addEventListener('DOMContentLoaded', function() {
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
    });
  }
});
</script>